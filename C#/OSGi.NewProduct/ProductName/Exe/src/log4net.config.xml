<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">

    <!-- 所有日志（不包含数据库日志） -->
    <appender name="InfoAppender" type="Acl.Log.Impl.AclRollingFileAppender">
        <param name="File" value="Log\\Info\\" />
        <param name="AppendToFile" value="true" />
        <param name="ImmediateFlush" value="true"/>
        <param name="StaticLogFileName" value="false" />
        <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;" />
        <param name="RollingStyle" value="Date" />
        <param name="MaxSizeRollBackups" value="100" />
        <param name="PreserveLogFileNameExtension" value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="[%date] [%level] [%thread] [%logger] %message%newline" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <param name="LoggerToMatch" value="数据库" />
            <param name="AcceptOnMatch" value="false"/>
        </filter>
    </appender>

    <!-- 异常日志 -->
    <appender name="ErrorAppender" type="Acl.Log.Impl.AclRollingFileAppender">
        <param name="File" value="Log\\Error\\" />
        <param name="AppendToFile" value="true" />
        <param name="ImmediateFlush" value="true"/>
        <param name="StaticLogFileName" value="false" />
        <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;" />
        <param name="RollingStyle" value="Date" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="[%date] [%level] [%thread] [%logger] (文件名:[%file] 行号:[%line]) (类名:[%class] 方法:[%method]) %message %exception%newline" />
        </layout>
        <filter type="log4net.Filter.LevelRangeFilter">
            <param name="LevelMin" value="WARN" />
            <param name="LevelMax" value="FATAL" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <param name="LoggerToMatch" value="数据库" />
            <param name="AcceptOnMatch" value="false"/>
        </filter>
    </appender>

    <!-- 数据库日志 -->
    <appender name="DatabaseAppender" type="Acl.Log.Impl.AclRollingFileAppender">
        <param name="File" value="Log\\Database\\" />
        <param name="AppendToFile" value="true" />
        <param name="ImmediateFlush" value="true"/>
        <param name="StaticLogFileName" value="false" />
        <param name="DatePattern" value="yyyy-MM-dd&quot;.log&quot;" />
        <param name="RollingStyle" value="Date" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="[%date] [%level] [%thread] [%logger] (文件名:[%file] 行号:[%line]) (类名:[%class] 方法:[%method]) %message %exception%newline" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <param name="LoggerToMatch" value="数据库" />
            <param name="AcceptOnMatch" value="true"/>
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <root>
        <level value="INFO" />
        <appender-ref ref="InfoAppender" />
        <appender-ref ref="ErrorAppender" />
        <appender-ref ref="DatabaseAppender" />
        <!--<appender-ref ref="ConsoleAppender" />
    <appender-ref ref="ConsoleErrorAppender" />-->
    </root>

</log4net>


<!--
  DEBUG: 指出细粒度信息事件对调试应用程序是非常有帮助的。  
  INFO: 表明消息在粗粒度级别上突出强调应用程序的运行过程。  
  WARN：表明会出现潜在错误的情形。  
  ERROR：指出虽然发生错误事件，但仍然不影响系统的继续运行。  
  FATAL：指出每个严重的错误事件将会导致应用程序的退出。
-->